<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <m.client.library.addon.media.CustomVideoView 
         android:id="@+id/customVideoView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true" 
    />
    <LinearLayout
        android:id="@+id/menuLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#CC000000"
	    android:layout_alignRight="@id/customVideoView"
		android:layout_alignTop="@id/customVideoView"
	    android:orientation="vertical"
	    android:visibility="gone">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:paddingTop="2dip"
	        android:paddingBottom="2dip"
	        android:orientation="horizontal">
	
	        <ImageButton
				android:id="@+id/fullscreenBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:background="@drawable/ic_fullscreen_stretch"
				android:contentDescription="@string/app_name"
				android:visibility="visible"
			/>
		    <ImageButton
				android:id="@+id/originscreenBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:background="@drawable/ic_fullscreen_shrink"
				android:contentDescription="@string/app_name"
				android:visibility="gone"
			/>
		    <ImageButton
					android:id="@+id/cancelBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:background="@drawable/ic_cancel"
					android:contentDescription="@string/app_name"
					android:visibility="visible"
				/>
	
	    </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>